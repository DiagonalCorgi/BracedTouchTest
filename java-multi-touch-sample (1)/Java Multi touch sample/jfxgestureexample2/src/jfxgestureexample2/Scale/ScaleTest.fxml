<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane onTouchPressed="#onTouchPressed" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jfxgestureexample2.Scale.ScaleController">
   <GridPane prefHeight="1060.0" prefWidth="1920.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints maxHeight="337.0" minHeight="10.0" prefHeight="57.0" vgrow="SOMETIMES" />
       <RowConstraints maxHeight="355.0" minHeight="0.0" prefHeight="55.0" vgrow="SOMETIMES" />
       <RowConstraints maxHeight="968.0" minHeight="10.0" prefHeight="968.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Button fx:id="rBtn" mnemonicParsing="false" onAction="#handle" text="Randomize Scale">
            <GridPane.margin>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </GridPane.margin>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Button>
         <Label fx:id="sourceScale" onZoom="#setOnZoom" text="0.0" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
          <Arc fx:id="source" fill="DODGERBLUE" length="270.0" onTouchPressed="#onTouchPressed" onZoom="#setOnZoom" radiusX="100.0" radiusY="100.0" stroke="BLACK" strokeType="INSIDE" type="ROUND" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
         <Label fx:id="targetScale" text="0.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
          <Arc fx:id="target" fill="DODGERBLUE" length="270.0" radiusX="100.0" radiusY="100.0" stroke="BLACK" strokeType="INSIDE" type="ROUND" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
      </children>
   </GridPane>
</AnchorPane>
